	<!-- Header -->
	<header id="head">
		<div class="container">
         @if (Request.IsAuthenticated)
                 { 
			<div class="row">
                     
                @foreach (var b in ViewBag.Name)
                {
                if (b.Email == User.Identity.Name)
                {
				<p><a href="@Url.Action("UserPage", "User", new {userId=User.Identity.Name})" ><img src="@b.UserFace" alt="User" width="80px" align="left"></a> 
               <p>&nbsp @b.LastName @b.FirstName</p>
				<p>&nbsp @Html.Encode(User.Identity.Name)</p>
                </p>}
                }

			</div>}
		</div>
	</header>
